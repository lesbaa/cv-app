{
  "name": "les-cv-2",
  "alias": "les-cv-app.now.sh",
  "version": "2.0.0",
  "description": "The Digital Curriculum Vitae of Les Moffat Esq | A Universal PWA built using react, redux, express and next.js. Because, well, why not, I wanted to see if I could do it.",
  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV=dev LES_ENV=dev nodemon --watch server.js --watch next.config.js --watch .babelrc --watch server/ --watch package.json server.js",
    "start": "NODE_ENV=production LES_ENV=live node server.js",
    "build": "next build",
    "test:watch": "NODE_ENV=test jest --watch --no-cache --coverage",
    "test:cov": "NODE_ENV=test jest --no-cache --coverage; cd ./lcov http-server",
    "test": "NODE_ENV=test jest --ci",
    "https:gen-dev-conf": "cd ~/Sites/cv-v2/app/; chmod 777 bin/get-https; bin/get-https",
    "https:gen-dev-cert": "cd ~/Sites/cv-v2/app/server/dev-https; openssl req -config lescv.dev.conf -new -sha256 -newkey rsa:2048 -nodes -keyout lescv.dev.key -x509 -days 365 -out lescv.dev.crt",
    "todo": "grep -r --exclude='*.snap' --exclude='*.json' --exclude='README.md' --exclude-dir={.git,node_modules,.next,coverage,build} TODO ."
  },
  "jest": {
    "transform": {
      "^.+\\.js?$": "babel-jest"
    },
    "setupTestFrameworkScriptFile": "<rootDir>/setUpTests.js",
    "moduleNameMapper": {
      "^.+\\.glsl$": "<rootDir>/__mocks__/shader.mock.js"
    },
    "coverageDirectory": "./lcov"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/lesbaa/les-cv.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "homepage": "https://bitbucket.org/lesbaa/les-cv#readme",
  "devDependencies": {
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^9.0.0",
    "babel-jest": "^23.4.2",
    "enzyme": "^3.5.0",
    "enzyme-adapter-react-16": "^1.3.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-import-resolver-babel-module": "^4.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.8.2",
    "jest": "^23.5.0",
    "nodemon": "^1.17.5",
    "prop-types": "^15.6.2",
    "spdy-keys": "0.0.0"
  },
  "dependencies": {
    "@babel/core": "^7.0.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "compression": "1.7.2",
    "core-js": "^2.5.7",
    "date-fns": "^1.29.0",
    "express": "^4.16.3",
    "glsl-noise": "^0.0.0",
    "glslify-loader": "^1.0.2",
    "is-mobile": "^1.0.0",
    "isomorphic-fetch": "2.2.1",
    "js-cookie": "^2.2.0",
    "lru-cache": "^4.1.3",
    "matter-attractors": "^0.1.6",
    "matter-js": "^0.14.1",
    "matter-wrap": "^0.2.0",
    "micro": "9.3.1",
    "micro-route": "2.5.0",
    "next": "6.1.1",
    "next-connect-redux": "^0.1.5",
    "next-page-transitions": "^1.0.0-alpha.3",
    "pixi.js": "^4.8.1",
    "ramda": "^0.25.0",
    "raw-loader": "^0.5.1",
    "react": "16.4.0",
    "react-dom": "16.4.0",
    "react-feather": "^1.1.0",
    "react-html-parser": "^2.0.2",
    "react-redux": "^5.0.7",
    "react-ssr-switch": "^1.0.0",
    "redux": "^4.0.0",
    "redux-devtools-extension": "^2.13.2",
    "redux-thunk": "^2.3.0",
    "serve-static": "1.13.2",
    "spdy": "3.4.7",
    "styled-jsx": "^2.2.6",
    "toxiclibsjs": "^0.3.3",
    "webpack": "4.8.3"
  }
}
